# Environment Configuration
ENVIRONMENT=development

# Application
APP_NAME="Paraphrase API"
VERSION="1.0.0"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security (Generate a secure secret key)
SECRET_KEY=your-super-secret-key-here-must-be-32-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/paraphrase_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# Celery
BROKER_URL=redis://localhost:6379/1
RESULT_BACKEND=redis://localhost:6379/2

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# DuckDuckGo Search Configuration
DDGS_ENABLED=true
DDGS_REGION=id-id
DDGS_LANGUAGE=id
DDGS_MAX_RESULTS=5
DDGS_SAFE_SEARCH=moderate

# File Handling
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Text Processing Limits
MAX_TEXT_LENGTH=10000
MIN_TEXT_LENGTH=10
MAX_BATCH_SIZE=100

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# CORS (comma-separated origins)
CORS_ORIGINS=*
CORS_CREDENTIALS=true